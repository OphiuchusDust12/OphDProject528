
<apex:page id="PartnerDocumentLandingPage" controller="PartnerDocumentLandingPageController">
    <style>
        body{
            font-family:'effra', 'Open Sans', sans-serif !important;
        }

        ul{
            list-style-type:none;
            margin:0px;0px;0px;0px
        }
        li.menu-item {
             margin:50px 0;
             color: #428bca;
             cursor: pointer;
             line-height: 1.5em;
             margin-left:0px;
        }

       .document-content li{
            margin-left:0px;
        }

        h3{
            margin-left:5%;
            color:#E68000;;
            font:normal normal 600 normal 16px / 27px effra, 'Open Sans', sans-serif;
            outline: #E68000;
        }

        .page-title{
            font-size:1.5em;
            text-transform: uppercase;
            text-rendering: optimizeLegibility;
            color: #E68000;
            display:block;
            padding-left: 20%;
            padding-top: .5em;
        }

        .document-content{
           padding-top:2%
        }

        .side-bar{
            border-left: 1px solid #A1A1A1;
            width: 280px;
            padding-right:15em;
            margin-bottom:10px;
        }

        li > a {
            text-decoration: none;
            cursor: pointer;
            color: #428bca;
            line-height:1.5em;
            font-size:11px;
        }


    </style>

    <div style="width: 100%;">

        <h2 class ="page-title">Partner Document Library</h2>

        <div class="document-content" style="width: 30%; float: right;">
            <aside class ="side-bar">
                <apex:form>
                    <h3>Available Documents</h3>
                        <ul>
                            <apex:repeat value="{!DocumentDetailList}" var="d">
                                <li>
                                    <apex:commandLink value="{!d.Title}" reRender="previewPanel" action="{!setSelectedDocumentId}" style="text-decoration: none;">
                                        <apex:param name="documentId" value="{!d.DocumentId}" />
                                        <apex:param name="documentTitle" value="{!d.Title}" />
                                        <apex:param name="documentExtension" value="{!d.DocumentExtension}" />
                                    </apex:commandLink>
                                </li>
                            </apex:repeat>
                        </ul>
                </apex:form>
            </aside>
        </div>
        <div style="width: 50%; float: left;" class="document-content document-viewer">
            <apex:outputPanel id="previewPanel">
                <apex:outputPanel rendered="{!ShowCanvasApp}">
                    <apex:canvasApp applicationName="inContact Document Viewer"  parameters="{salesforceDocumentId: '{!SelectedDocumentId}', documentType: '{!SelectedDocumentExtension}', documentTitle: '{!SelectedDocumentTitle}'}" height="7500px" width="750px">
                    </apex:canvasApp>
                </apex:outputPanel>
            </apex:outputPanel>
        </div>
    </div>
</apex:page>

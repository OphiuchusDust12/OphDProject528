<apex:page id="AssetSubscriptionAllocation" controller="AssetSubscriptionAllocationController">


    <apex:form>
        <apex:pageBlock title="Asset Allocation" id="pgblock" mode="edit">
            <apex:pageMessages/>

            <apex:pageBlockSection columns="1" >
                <apex:outputField value="{!Asset.Name}"/>
                <apex:outputField value="{!Asset.Description}"/>
            </apex:pageBlockSection>

            <apex:pageBlockButtons title="">
                <apex:commandButton title="New" value="New" action="{!createAssetAllocation}" reRender="pgblock"/>
                <apex:commandButton title="Save" value="Save" action="{!saveAssetAllocation}" reRender="pgblock"/>
                <apex:commandButton title="Cancel" value="Cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>

            <apex:pageBlockSection title="Asset Allocations" columns="1">

                <apex:pageBlockTable value="{!assetAllocations}" var="entry" id="assettbl">
                    <apex:column headerValue="Asset">
                        <apex:inputField value="{!entry.assetAllocation.Asset__c}" required="false"/>
                    </apex:column>
                    <apex:column headerValue="Phase Project">
                        <apex:inputField value="{!entry.assetAllocation.Project__c}" required="false"/>
                    </apex:column>
                    <apex:column headerValue="Quantity">
                        <apex:inputField value="{!entry.assetAllocation.Quantity_Allocation__c}"/>
                    </apex:column>
                    <apex:column headerValue="Percentage">
                        <apex:inputField value="{!entry.assetAllocation.Percent_Allocation__c}"/>
                    </apex:column>
                </apex:pageBlockTable>

            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>


</apex:page>




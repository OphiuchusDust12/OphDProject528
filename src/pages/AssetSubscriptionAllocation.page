<apex:page id="AssetSubscriptionAllocation" controller="AssetSubscriptionAllocationController">

    <apex:sectionHeader title="Asset" subTitle="{!Asset.Name}"/>
    <apex:pageBlockSection columns="1" >
        <apex:outputField value="{!Asset.Name}"/>
        <apex:outputField value="{!Asset.ImplementedProduct__c.Name}"/>
    </apex:pageBlockSection>

    <apex:form>
        <apex:pageBlock title="Asset Allocation" id="pgblock" mode="edit">

            <apex:pageMessages/>

            <apex:pageBlockButtons title="">
                <apex:commandButton title="Save" value="Save" action="{!save}" reRender="pgblock"/>
                <apex:commandButton title="Cancel" value="Cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Asset Allocation" columns="1">
                <apex:pageBlockTable value="{!AssetAllocationList}" var="entry">
                    <apex:column value="{!entry.TBD}" title="Project ID"/>
                    <apex:column value="{!entry.TBD}" title="Project Name"/>
                    <apex:column value="{!entry.TBD}" title="Allocation Percent"/>
                    <apex:column value="{!entry.TBD}" title="Allocation Quantity"/>
             </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>


</apex:page>




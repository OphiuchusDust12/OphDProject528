    }
    td.HiglightPriority {
       background-color: #d07b7b !important;
    }
    td.HiglightPriority a {
        color: black !important;
    }
    td.MediumPriority a {
        color: black !important;
    }
    .newItemOnList{
        background-color: #fafcad;
    }

